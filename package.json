{
  "name": "@fileverse/crypto",
  "version": "0.0.18",
  "description": "Crypto functions and helpers",
  "type": "module",
  "exports": {
    "./ecies": {
      "types": "./dist/ecies/index.d.ts",
      "import": "./dist/ecies/index.js",
      "require": "./dist/ecies/index.cjs"
    },
    "./webcrypto": {
      "types": "./dist/webcrypto/index.d.ts",
      "import": "./dist/webcrypto/index.js",
      "require": "./dist/webcrypto/index.cjs"
    },
    "./kdf": {
      "types": "./dist/kdf/index.d.ts",
      "import": "./dist/kdf/index.js",
      "require": "./dist/kdf/index.cjs"
    },
    "./argon": {
      "import": "./dist/argon/index.js",
      "require": "./dist/argon/index.cjs"
    },
    "./nacl": {
      "types": "./dist/nacl/index.d.ts",
      "import": "./dist/nacl/index.js",
      "require": "./dist/nacl/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    }
  },
  "main": "./dist/ecies/index.cjs",
  "module": "./dist/ecies/index.js",
  "types": "./dist/ecies/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "vite",
    "build": "npm run clean && vite build",
    "build:prod": "npm run clean && NODE_ENV=production vite build && find dist -name \"*.map\" -delete",
    "prepare": "npm run build:prod",
    "preview": "vite preview",
    "test": "vitest"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "ISC",
  "keywords": [
    "cryptography",
    "encryption",
    "webcrypto",
    "rsa",
    "aes",
    "ecies"
  ],
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@vitest/ui": "^3.1.2",
    "terser": "^5.28.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@noble/ciphers": "^2.1.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@peculiar/webcrypto": "^1.5.0",
    "js-base64": "^3.7.7",
    "tweetnacl": "^1.0.3"
  }
}
